{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build genius with MSVC",
      "type": "shell",
      "command": "cl.exe",
      "args": [
        "src\\*.cpp",  // 소스 파일 경로 (필요 시 수정)
        "/I", "include",
        "/I", "lib",
        "/Fe:build\\ktGeniusExam_v250722.exe",  // 출력 실행 파일 이름
        "/link",
        "WebView2LoaderStatic.lib",
        "user32.lib",
        "ole32.lib",
        "oleaut32.lib",
        "gdi32.lib",
        "windowscodecs.lib",
        "shell32.lib"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    }
  ]
}
